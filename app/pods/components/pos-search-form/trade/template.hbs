<h1 class="search-form-trade__title">
  {{t 'search_form.trade.title'}}
</h1>

<div class="search-form-trade__row">
  {{pos-field/switch
    label=(t 'search_form.trade.status')
    value=tradeFilter.status
    toggleableValue='online'
    toggleableValueLabel=(t 'search_form.trade.status_online')}}

  <div class="search-form-trade__column search-from-trade__column--space-left">
    {{pos-field/text
      label=(t 'search_form.trade.account')
      value=tradeFilter.account}}
  </div>
</div>

<div class="search-form-trade__price">
  <label class="search-form-trade__price-label">{{t 'search_form.trade.price'}}</label>

  <div class="search-form-trade__price-currency">
    {{#pos-power-select
      options=currencies
      selected=selectedCurrency
      searchField='name'
      onchange=(action currencySelect)
    as |currency|}}
      <img src="{{currency.image}}" alt="{{currency.id}}">
      <div>{{currency.name}}</div>
    {{/pos-power-select}}
  </div>

  <div class="search-form-trade__price-min-max">
    {{input
      value=tradeFilter.price.min
      placeholder=(t 'search_form.trade.min')
      class='search-form-trade__price-min'}}

    {{input
      value=tradeFilter.price.max
      placeholder=(t 'search_form.trade.max')
      class='search-form-trade__price-max'}}
  </div>
</div>
