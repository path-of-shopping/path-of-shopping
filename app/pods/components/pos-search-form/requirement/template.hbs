<h1 class="search-form-requirement__title">
  {{t 'search_form.requirement.title'}}
</h1>

<div class="search-form-requirement__row">
  <div class="search-form-requirement__column">
    {{pos-field/min-max
      values=requirementFilter.level
      label=(t 'search_form.requirement.level')}}
  </div>
  <div class="search-form-requirement__column">
    {{pos-field/min-max
      values=requirementFilter.dexterity
      label=(t 'search_form.requirement.dexterity')}}
  </div>
</div>
<div class="search-form-requirement__row">
  <div class="search-form-requirement__column">
    {{pos-field/min-max
      values=requirementFilter.strength
      label=(t 'search_form.requirement.strength')}}
  </div>
  <div class="search-form-requirement__column">
    {{pos-field/min-max
      values=requirementFilter.intelligence
      label=(t 'search_form.requirement.intelligence')}}
  </div>
</div>
